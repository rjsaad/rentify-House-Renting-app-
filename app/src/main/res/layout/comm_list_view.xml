<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comm_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <ImageView
            android:id="@+id/commplcHldIV"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:elevation="@dimen/_10sdp"
            android:src="@mipmap/houseplaceholder" />

        <TextView
            android:id="@+id/pkrTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_toEndOf="@id/commplcHldIV"
            android:fontFamily="@font/robotoregular"
            android:text="@string/pkr"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/commpriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@id/pkrTV"
            android:fontFamily="@font/robotoregular"
            android:text="1 lakh"
            android:textColor="@color/headingColor"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/commcityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pkrTV"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="@font/robotoregular"
            android:text="@string/lahore"
            android:layout_toEndOf="@id/comma"
            android:textColor="@color/headingColor"
            android:textSize="@dimen/_13ssp" />


        <TextView
            android:id="@+id/commaddressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pkrTV"
            android:layout_toEndOf="@id/commplcHldIV"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/robotoregular"
            android:text="@string/upper_chatter"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/comma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_below="@id/commpriceTV"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/commaddressTV"/>


        <TextView
            android:id="@+id/proCommercialList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/commaddressTV"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@id/commplcHldIV"
            android:text="Farm HOuse"

            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/commlistAreaRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/proCommercialList"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/area_floor_size_icon_change"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_toEndOf="@id/commplcHldIV"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/commlistAreaUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kanal"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_below="@id/proCommercialList"
            android:layout_toEndOf="@id/commlistAreaRange"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@color/black"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/lineColor" />
</LinearLayout>